<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
              android:layout_width="170dp"
              android:padding="5dp"
              android:layout_height="wrap_content" android:id="@+id/about" android:background="@drawable/side_nav_bar">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="About"
                android:layout_width="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/colorAccent"
                android:textStyle="bold"
                android:textSize="20sp"
                android:layout_height="wrap_content" android:id="@+id/textView4"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_gravity="right"
                android:textSize="20sp"
                android:padding="5dp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content" android:id="@+id/close"/>
    </FrameLayout>
    <TextView
            android:text="Shine salsa school was started in 2015, with the aim of .... about about about about"
            android:layout_width="wrap_content"
            android:layout_gravity="center"
            android:padding="3dp"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" android:id="@+id/textView5"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="21dp"/>
    <TextView
            android:text=" We teach:"
            android:layout_width="match_parent"
            android:layout_margin="2dp"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" android:id="@+id/textView6"/>
    <TextView
            android:text=" 1. Aerobics"
            android:textColor="@color/colorAccent"
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:layout_height="wrap_content" android:id="@+id/textView7"/>
    <TextView
            android:text=" 2. Dance courses"
            android:layout_width="match_parent"
            android:textColor="@color/colorAccent"
            android:textSize="16sp"
            android:layout_height="wrap_content" android:id="@+id/textView8"/>
    <TextView
            android:text=" 3. detail ."
            android:layout_width="match_parent"
            android:textSize="16sp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" android:id="@+id/textView9"/>
    <Space
            android:layout_width="match_parent"
            android:layout_height="32dp"/>
    <TextView
            android:text=" Address"
            android:layout_width="match_parent"
            android:textSize="14sp"
            android:paddingTop="5dp"
            android:layout_margin="2dp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" android:id="@+id/textView10"/>
    <TextView
            android:text="Bole, infront of Plaza bldg. Beside cameroon st."
            android:layout_width="match_parent"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" android:id="@+id/textView11"/>
    <TextView
            android:text="Phone: +251940262656"
            android:layout_width="match_parent"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" android:id="@+id/textView12"/>
    <TextView
            android:text="email: shine@email.info"
            android:layout_width="match_parent"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" android:id="@+id/textView13"/>
</LinearLayout>