<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              android:gravity="center"
              android:weightSum="1"
              android:layout_marginTop="@dimen/header_vertical_spacing"
              tools:context=".detail">

    <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:background="@color/colorPrimary"
            android:weightSum="0"
            android:layout_height="wrap_content">
        <Button
                android:text="@string/left"
                android:layout_width="wrap_content"
                android:textSize="35sp"
                android:layout_height="wrap_content" android:id="@+id/left" android:layout_weight="0"/>
        <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:layout_weight="1"
                android:textSize="35sp"
                android:textColor="@color/colorAccent"
                android:layout_height="wrap_content" android:id="@+id/category" android:background="@color/colorPrimary"
                android:textStyle="bold" app:fontFamily="casual"/>
        <Button
                android:text="@string/right"
                android:layout_width="wrap_content"
                android:textSize="35sp"
                android:layout_height="wrap_content" android:id="@+id/right" android:layout_weight="0"/>
    </LinearLayout>
    <TextView
            android:text="Beginner Courses"
            android:layout_width="match_parent"
            android:gravity="center"
            android:layout_weight="0"
            android:textSize="35sp"
            android:textColor="@color/colorAccent"
            android:layout_height="wrap_content" android:id="@+id/level" android:background="@color/colorPrimary"
            android:textStyle="bold" app:fontFamily="casual"/>
    <GridView
            android:id="@+id/gridview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:columnWidth="150dp"
            android:horizontalSpacing="15dp"
            android:numColumns="auto_fit"
            android:verticalSpacing="15dp" android:background="@color/colorPrimary"/>
    <!--android:layout_width="match_parent"-->
    <!--android:layout_height="match_parent"-->
    <!--android:gravity="center"-->
    <!--android:layout_margin="20dp"-->
    <!--android:stretchMode="columnWidth"-->
    <!--android:numColumns="auto_fit"-->
    <!--android:verticalSpacing="15dp"/>-->


</LinearLayout>
